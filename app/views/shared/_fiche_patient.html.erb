<br>
<div class="patient-profile-section" data-bs-toggle="collapse" data-bs-target="#info-perso">
  <span>Informations personnelles</span> <i class="fa-solid fa-chevron-down burger-informations"></i>
</div>

<div class="collapse" id="info-perso">
  <div class="patient-profile-section-detail">
    <div class="patient-profile-section-detail-item">
      <%= image_tag "icones/pin.svg" %><span><%= @patient.address %></span>
    </div>
    <div class="patient-profile-section-detail-item">
      <%= image_tag "icones/phone.svg" %><span><%= @patient.tel_number %></span>
    </div>
    <div class="patient-profile-section-detail-item">
      <%= image_tag "icones/mail.svg" %><span><%= @patient.email %></span>
    </div>
    <div class="patient-profile-section-detail-item">
      <%= image_tag "icones/birth.svg" %><span><%= @patient.birth_day.strftime("%d/%m/%Y") %></span>
    </div>
    <div class="patient-profile-section-detail-item">
      <%= image_tag "icones/genre.svg" %><span><%= @patient.gender %></span>
    </div>
  </div>
</div>
<hr>
<div class="patient-profile-section" data-bs-toggle="collapse" data-bs-target="#info-med">
  <span>Informations médicales</span> <i class="fa-solid fa-chevron-down burger-informations"></i>
</div>

<div class="collapse" id="info-med">
  <div class="patient-profile-section-detail">
    <div class="patient-profile-section-detail-item">
      <i class="fa-solid fa-address-card"></i><span><%= @patient.ss_number %></span>
    </div>
    <div class="patient-profile-section-detail-item">
      <i class="fa-solid fa-ruler"></i><span><%= @patient.height %></span><span>&nbspcm</span>
    </div>
    <div class="patient-profile-section-detail-item">
      <i class="fa-solid fa-weight-scale"></i><span><%= @patient.weight %></span><span>&nbspkg</span>
    </div>
    <div class="patient-profile-section-detail-item">
      <i class="fa-solid fa-droplet"></i><span><%= @patient.blood_type %></span>
    </div>
  </div>
</div>
<hr>
<div class="patient-profile-section" data-bs-toggle="collapse" data-bs-target="#info-emerg" >
  <span>Contact urgence</span> <i class="fa-solid fa-chevron-down burger-informations"></i>
</div>

<div class="collapse" id="info-emerg">
  <div class="patient-profile-section-detail">
    <div class="patient-profile-section-detail-item">
      <i class="fa-solid fa-user"></i><span>Proches</span>
    </div>
    <div class="patient-profile-section-detail-item">
      <span><%= @patient.emergency_contact_name %> <%= @patient.emergency_contact_tel %></span>
    </div>
    <div class="patient-profile-section-detail-item">
      <i class="fa-solid fa-user-doctor"></i><span>Médecin référent</span>
    </div>
    <div class="patient-profile-section-detail-item">
      <span><%= @patient.referring_doctor %></span>
    </div>
  </div>
</div>
<hr>
<div class="bottom-link"><%= link_to "Modifier les informations",  edit_patient_path(@patient) %></div>
