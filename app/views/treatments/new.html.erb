<div class="return-bouton-treatments">
  <%= link_to url_for(:back) do %>
    <%= image_tag "icones/retour.svg" %>
  <% end %>
</div>

<div class="general-div">

  <h3>AJOUTER UN<br>SOIN</h3>

  <div class="d-flex justify-content-center m-3">
    <div id="input-custom" class="input-g">
      <%= simple_form_for  [:consultation, @treatment] do |f| %>

        <%= f.input :category,
        label: "",
        as: :radio_buttons,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'category-wrapper',
        item_wrapper_class: 'category-item',
        input_html: {class: 'category-selector treatment_category'},
        collection: Treatment::CATEGORY %>

        <%= f.input :content,
          label: false,
          placeholder: "Détail du soin",
          wrapper_html: { class:"input-groupe" },
          input_html: { class:"input"},
          label_html: {class:"user-label"} %>

        <div class="checkbox-recurrence <%= class_names({"d-none": !@recurring}) %>">
          <%= f.input :recurring,
                      as: :boolean,
                      checked_value: true,
                      boolean_style: :inline,
                      include_hidden: false,
                      label: "Ajouter ce soin aux consultations régulières suivantes ?",
                      placeholder: " ",
                      wrapper_html: { class:"input-groupe" },
                      input_html: { class:"" },
                      label_html: { class:"" } %>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.button :submit, "CRÉER UN TRAITEMENT", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
